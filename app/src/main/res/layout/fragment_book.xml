<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.tour.book.BookFragment">

   <ImageView
       android:id="@+id/bookWallpaper"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/book_wallpaper"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <LinearLayout
       android:id="@+id/contentLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginStart="120dp"
       android:layout_marginTop="55dp"
       android:layout_marginEnd="130dp"
       android:layout_marginBottom="55dp"
       android:weightSum="1"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="@+id/bookWallpaper"
       app:layout_constraintTop_toTopOf="@+id/bookWallpaper">

      <LinearLayout
          android:id="@+id/leftPageLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="0.5"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="20dp"
          android:paddingEnd="20dp">
         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/ic_launcher_background"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="bla bla bla Pavese. great guy! Come to know him.. bla bla bla"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/rightPageLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="0.5"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="20dp"
          android:paddingEnd="20dp">
         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/ic_launcher_background"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="bla bla bla Pavese. great guy! Come to know him.. bla bla bla"/>

      </LinearLayout>

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>